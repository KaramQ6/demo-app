# DigitalOcean Environment Variables
# Copy this to .env and update values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smarttour
DB_USER=smarttour
DB_PASSWORD=your_secure_password_here

# Supabase Configuration (if using)
REACT_APP_SUPABASE_URL=your_supabase_url
REACT_APP_SUPABASE_ANON_KEY=your_supabase_key

# App Configuration
NODE_ENV=production
PORT=3000
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true
CI=false

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# DigitalOcean Spaces (if using for file storage)
DO_SPACES_KEY=your_spaces_key
DO_SPACES_SECRET=your_spaces_secret
DO_SPACES_ENDPOINT=your_spaces_endpoint
DO_SPACES_BUCKET=your_bucket_name

# Email Service (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
